@model IEnumerable<BL.ModelsBL.FilmModel>

@{
    ViewBag.Title = "Filmy";
}

<h2>Filmy</h2>

<table class="table table-striped table-bordered" id="filmList">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rok)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kusu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Typ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zeme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Popis)
            </th>
            <th>
                Akce
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Details", "Films", new {id = item.IdFilm}, null)" style="color: #79a736;">@item.Nazev</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rok)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cena)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kusu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Typ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Delka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zeme)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Popis)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Films", new {id = item.IdFilm}, null)" class="btn btn-info btn-xs">Edit</a>
                    <a href="@Url.Action("Edit", "Films", new {id = item.IdFilm}, null)" class="btn btn-warning btn-xs">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="@Url.Action("Create", "Films")" class="btn btn-success btn-success btn-sm">Add Film</a>
</p>

@section Scripts{
    <script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")"></script>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/datatables.min.css")" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/datatables.min.js")"></script>
    <script>
        $(document).ready(function() {
            $("#filmList").DataTable();
        });
    </script>
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")">
}
